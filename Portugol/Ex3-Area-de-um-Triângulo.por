 * Programa: Ler a base altura de um triângulo. Calcular e exibir a área do triângulo sabendo que área = base*altura/2
 */
programa
{
	
	funcao inicio()
	{
		real base,altura
		escreva("Base do Triângulo em Centímetros -> ")
		leia(base)
		escreva("Altura do Triângulo em Centímetros -> ")
		leia(altura)
		escreva("Área do Triângulo -> "+base*altura/2,"cm²")
	}
}
